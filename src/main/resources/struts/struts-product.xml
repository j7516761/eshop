<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <package name="product" extends="default" namespace="/product">
        <interceptors>
            <interceptor-stack name="productStack">
                <interceptor-ref name="modelDrivenStack" />
                <interceptor-ref name="fileUpload" />
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="productStack" />

        <!-- 定義顯示產品列表的 Action -->
        <action name="list" class="com.example.action.ProductAction" method="listProducts">
            <result name="SUCCESS" type="redirect">/product.jsp</result>
            <result name="ERROR" type="redirect">/error.jsp</result>
        </action>

        <!-- 定義保存新產品的 Action -->
        <action name="save" class="com.example.action.ProductAction" method="saveProduct">
            <result name="SUCCESS" type="redirect">/product.jsp</result>
            <result name="ERROR" type="redirect">/error.jsp</result>
        </action>
    </package>
</struts>