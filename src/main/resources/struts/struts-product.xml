<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="product" extends="struts-default" namespace="/product">


		<!-- 定義顯示產品列表的 Action -->
		<action name="list" class="com.example.action.ProductAction"
			method="listProducts">
			<result name="SUCCESS">/WEB-INF/views/product/product.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>

		<action name="initDB" class="com.example.action.ProductAction"
			method="initDB">
			<result name="success">/WEB-INF/views/product/product.jsp</result>
		</action>

		<!-- 定義保存新產品的 Action -->
		<action name="detail" class="com.example.action.ProductAction"
			method="productDetail">
			<result>/WEB-INF/views/product/productDetail.jsp</result>
		</action>
	</package>
</struts>