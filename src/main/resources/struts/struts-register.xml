<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!-- 註解：定義註冊頁面所需的動作處理，這個 package 用來處理註冊相關功能 -->
    <package name="register" extends="struts-default">

        <!-- 註解：處理註冊頁面請求的 action -->
        <action name="register" class="com.example.action.RegisterAction" method="register">
            <!-- 註解：當註冊成功後，轉跳到註冊頁面 -->
            <result>/WEB-INF/views/register/register.jsp</result>
        </action>

        <!-- 註解：處理註冊資料儲存的 action -->
        <action name="save" class="com.example.action.RegisterAction" method="save">
            <!-- 註解：如果發生錯誤，會導向錯誤頁面 -->
            <result name="input">/WEB-INF/views/register/register.jsp</result>
            <!-- 註解：註冊成功後，跳轉到登入頁面 -->
            <result name="success" type="redirect">product/list</result>
        </action>
    </package>
</struts>
